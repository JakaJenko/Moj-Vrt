        <TextBlock x:Name="textBlock1_Copy3" HorizontalAlignment="Left" Margin="426,272,0,0" TextWrapping="Wrap" Text="Priimek" VerticalAlignment="Top" FontSize="25"/>
        <TextBox x:Name="ime" HorizontalAlignment="Left" Margin="583,205,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBlock x:Name="textBlock1_Copy4" HorizontalAlignment="Left" Margin="467,207,0,0" TextWrapping="Wrap" Text="Ime" VerticalAlignment="Top" FontSize="25"/>
        <TextBox x:Name="geslo2" HorizontalAlignment="Left" Margin="583,530,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="prijava" Content="Prijava" HorizontalAlignment="Left" Margin="706,614,0,0" VerticalAlignment="Top" Click="prijava_Click"/>

    </Grid>
</Page>
