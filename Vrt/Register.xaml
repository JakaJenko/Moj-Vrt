        <TextBox x:Name="enaslov" HorizontalAlignment="Left" Margin="583,335,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="446,467,0,0" TextWrapping="Wrap" Text="Geslo" VerticalAlignment="Top" FontSize="25"/>
        <TextBox x:Name="uporabnisko_ime" HorizontalAlignment="Left" Margin="583,400,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="register" Content="Registracija" HorizontalAlignment="Left" Margin="580,614,0,0" VerticalAlignment="Top" Click="register_Click"/>
        <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" Margin="367,532,0,0" TextWrapping="Wrap" Text="Ponovi geslo" VerticalAlignment="Top" FontSize="25"/>
        <TextBox x:Name="geslo" HorizontalAlignment="Left" Margin="583,465,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBlock x:Name="textBlock1_Copy2" HorizontalAlignment="Left" Margin="415,337,0,0" TextWrapping="Wrap" Text="E-naslov" VerticalAlignment="Top" FontSize="25"/>
